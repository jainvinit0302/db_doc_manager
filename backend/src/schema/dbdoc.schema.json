{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "project": { "type": "string" },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "db": { "type": "string" },
          "schema": { "type": "string" },
          "tables": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "columns": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "type": { "type": "string" }
                    },
                    "required": ["name", "type"]
                  }
                }
              },
              "required": ["name"]
            }
          }
        },
        "required": ["db", "schema", "tables"]
      }
    },
    "sources": { "type": "array" },
    "mappings": { "type": "array" }
  },
  "required": ["project", "targets"]
}
